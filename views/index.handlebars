<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group" style="margin-right: 10px;">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
          <select class="form-control" name="sort" staria-label="Default select example" style="margin-left: 10px;">
            <option {{#if sort1}}selected{{/if}}>A > Z</option>
            <option {{#if sort2}}selected{{/if}}>Z > A</option>
            <option {{#if sort3}}selected{{/if}}>評分</option>
            <option {{#if sort4}}selected{{/if}}>地區</option>
          </select>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
{{#if restaurants.length}}
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <div>
          <div class="card mb-3" >
            <img class="card-img-top" src={{this.image}}
              alt={{this.name}} >
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <span style="display: flex; margin-left: 50px;">
              <span style="margin: 0 10px;">
                <a href="/restaurants/{{this._id}}/edit" class="text-secondary">edit</a>
              </span>
              <span style="margin: 0 10px;">
                <a href="/restaurants/{{this._id}}" class="text-secondary">Detail</a>
              </span>
              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="margin: 0 10px;">
                <button type="submit" class="btn btn-primary">delete</button>
              </form>
            </span>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{else}}
<div class="alert alert-secondary" role="alert">
  <span>搜尋{{keyword}}無相關資料!!</span>
</div>
{{/if}}