<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
  <div>
    <label for="name">餐廳名稱：</label>
    <input type="text" id="name" placeholder="name" name="name" style="margin: 10px;" value="{{ restaurant.name }}"
      required>
  </div>
  <div>
    <label for="name_en">英文名稱：</label>
    <input type="text" id="name_en" placeholder="name_en" name="name_en" style="margin: 10px;" value="{{ restaurant.name_en }}" required>
  </div>
  <div>
    <label for="category">分類：</label>
    <input type="text" id="category" placeholder="category" name="category" style="margin: 10px;" value="{{ restaurant.category }}" required>
  </div>
  <div>
    <label for="image">圖片：</label>
    <input type="text" id="image" placeholder="image" name="image" style="margin: 10px;" value="{{ restaurant.image }}" required>
  </div>
  <div>
    <label for="location">地址：</label>
    <input type="text" id="loation" placeholder="location" name="location" style="margin: 10px;" value="{{ restaurant.location }}" required>
  </div>
  <div>
    <label for="phone">電話：</label>
    <input type="text" id="phone" placeholder="phone" name="phone" style="margin: 10px;" value="{{ restaurant.phone }}" required>
  </div>
  <div>
    <label for="google_map">地圖：</label>
    <input type="text" id="goole_map" placeholder="google_map" name="google_map" style="margin: 10px;" value="{{ restaurant.google_map}}" required>
  </div>
  <div>
    <label for="rating">地址：</label>
    <input type="number"  id="rating" step="0.1" placeholder="rating" name="rating" style="margin: 10px;" value="{{ restaurant.rating}}" required>
  </div>
  <div>
    <label for="description">地址：</label>
    <input type="text" id="description" placeholder="description" name="description" style="margin: 10px;" value="{{ restaurant.description}}" required>
  </div>
  <button type="submit">Save</button>
  <a href="/">back</a>
</form>