<form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
  <div>
    <input type="text" placeholder="name" name="name" style="margin: 10px;" value="{{ restaurant.name }}">
  </div>
  <div>
    <input type="text" placeholder="name_en" name="name_en" style="margin: 10px;" value="{{ restaurant.name_en }}">
  </div>
  <div>
    <input type="text" placeholder="category" name="category" style="margin: 10px;" value="{{ restaurant.category }}">
  </div>
  <div>
    <input type="text" placeholder="image" name="image" style="margin: 10px;" value="{{ restaurant.image }}">
  </div>
  <div>
    <input type="text" placeholder="location" name="location" style="margin: 10px;" value="{{ restaurant.location }}">
  </div>
  <div>
    <input type="text" placeholder="phone" name="phone" style="margin: 10px;" value="{{ restaurant.phone }}">
  </div>
  <div>
    <input type="text" placeholder="google_map" name="google_map" style="margin: 10px;" value="{{ restaurant.google_map}}">
  </div>
  <div>
    <input type="number" step="0.1" placeholder="rating" name="rating" style="margin: 10px;" value="{{ restaurant.rating}}">
  </div>
  <div>
    <input type="text" placeholder="description" name="description" style="margin: 10px;" value="{{ restaurant.description}}">
  </div>
  <button type="submit">Save</button>
  <a href="/">back</a>
</form>